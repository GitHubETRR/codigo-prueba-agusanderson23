#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define N 5 

 int main(){
    int matriz[N][N];
    int valormax = 0;
    int filamax = 0;
    int colmax = 0;
    srand(time(NULL));
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            matriz[i][j] = rand() % 30 + 1; 
            printf("%2d ", matriz[i][j]);  
        }printf("\n");
    }
    
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (matriz[i][j] > valormax) {
                valormax = matriz[i][j];
                filamax = i;
                colmax=j;
            }
        }
    }
    printf("El valor maximo es %d y se encuentra en la fila %d y en la columna %d", valormax, filamax + 1, colmax + 1);
    
    return 0;
}